<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.lohnguyen.aggiefeed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_c_horse"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_c_horse"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.lohnguyen.aggiefeed.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.lohnguyen.aggiefeed.activities.DetailActivity"
            android:parentActivityName="com.lohnguyen.aggiefeed.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lohnguyen.aggiefeed.activities.MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.INSERT" />
                <data android:mimeType="vnd.android.cursor.dir/event" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>